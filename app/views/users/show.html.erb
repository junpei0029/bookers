<div class="container px-5 px-sm-0">
  <%= render "devise/shared/error_messages", resource: @book %>

  <div class="row">
    <div class="col-md-3">
      <%= render 'shared/user_side_bar', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <%= render 'shared/books_list', books: @books %>
        </tbody>
      </table>
    </div>
  </div>
</div>